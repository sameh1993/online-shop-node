<%- include("parts/header") %> 

<%- include("parts/navbar") %> 


<div class="orders pt-4">
    <div class="container">
        <div class="head text-center">
            <h3> Our Orders </h3>
        </div>
        <div class="content mt-3">
            <% if(orders.length > 0) { %>
                
 
                    <table class="table">
                        <thead class="thead-dark">
                          <tr>
                            <th scope="col"> Num </th>
                            <th scope="col">Product Name</th>
                            <th scope="col"> Amount </th>
                            <th scope="col"> Cost </th>
                            <th scope="col"> Address </th>
                            <th scope="col"> Status </th>
                          </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i < orders.length; i++) {  %> 
                          <tr>
                            <th scope=""> <%= i+1 %>  </th>
                            <td scope="col"> <%= orders[i].nameProduct %>  </td>
                            <td scope="col"> <%= orders[i].amount %> </td>
                            <td scope="col"> <%= orders[i].cost %> </td>
                            <td scope="col"> <%= orders[i].address %> </td>
                            <td scope="col"> <%= orders[i].status %> </td>
                          </tr>
                          <% } %> 

                          
                         
                        </tbody>
                      </table>
               
            <% } else { %> 
                <div class="alert alert-info text-capitlize"> There are not orders yet  </div>
            <% }  %> 
        </div>
    </div>
</div>


<%- include("parts/footer") %> 